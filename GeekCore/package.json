{
  "name": "geekcore",
  "version": "1.0.0",
  "description": "API para fornecer filmes e animes para assistir e baixar",
  "main": "app.js",
  "scripts": {
    "start": "set PORT=3000 && react-scripts start",
    "dev": "nodemon app.js",
    "start:frontend": "set PORT=3000 && react-scripts start",
    "start:backend": "set HOST=0.0.0.0 && set PORT=3001 && nodemon app.js",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --watch",
    "build": "react-scripts build",
    "server": "node server.js"
  },
  "keywords": [
    "express",
    "mongoose",
    "api",
    "filmes",
    "animes"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "browser-image-compression": "^2.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.0",
    "react-scripts": "^5.0.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "autoprefixer": "^10.4.14",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
